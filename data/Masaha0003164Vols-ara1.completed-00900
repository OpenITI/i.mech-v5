ي بن يوسف بن ابراهيم.(@)(@)(@@)(@@)(@@) ||| الشيباني: -محمد بن الحسن...(@)(@)(@@)(@@)(@@) ||| شيخ الاسلام:(@)(@)(@@) -يوسف بن رافع بن تميم.(@)(@)(@@)(@@)(@@) ||| الشيخ الأكبر:(@)(@)(@@) -محمد بن علي بن محمد بن أحمد.(@)(@)(@@)(@@)(@@) ||| شيخ الزمان:(@)(@)(@@) -عين الزمان.(@)(@)(@@)(@@)(@@) ||| شيخ الشيعة:(@)(@)(@@) -أبو القاسم بن الحسين الحلي.(@)(@)PageV04P079(@)(@)(@@)(@@)(@@) ||| شيخ الشيوخ:(@)(@)(@@) -عين الزمان.(@)(@)(@@)(@@)(@@) ||| شيخ الطائفة:(@)(@)(@@) -الحسن بن علي بن الحسن الطبري.(@)(@)(@@)(@@)(@@) ||| الشيرازي:(@)(@)(@@) -فضل الله بن أبي نعيم عبد الله.(@)(@)(@@)(@@)(@@) ||| الشيرازي: -مصلح الدين سعدي.(@)(@)PageV04P080(@)(@)(@@)(@@)(@@) || «ص»(@)(@)(@@)(@@)(@@) ||| الصاحب:(@)(@)(@@) -علي بن عيسى الأربلي(@)(@)(@@)(@@)(@@) ||| صاحب الخاتم (ابن... ) :(@)(@)(@@) -الحسن بن علي بن الحسن بن علي الحسيني.(@)(@)(@@)(@@)(@@) ||| صاحب الديوان:(@)(@)(@@) -عطا ملك الخواجه علاء الدين الجويني 
ms705	.(@)(@)(@@)(@@)(@@) ||| صاحب الديوان: -محمد بن محمد بن محمد الجويني.(@)(@)(@@)(@@)(@@) ||| صالح بن عبد الله بن العظيم.(@)(@)(@@) هو أحد العلماء الستة الذين سمعوا عن رضي الدين علي بن طاوس بعض كتابه «التشريف بتعريف وقت التكليف» . وقد سرد أسماء جميعهم الشريف محمد بن أحمد بن أبي علي عبد الله الهاشمي، وكتب أسماءهم بخطه في ظهر نسخة من «التشريف» وكتب ابن طاوس بخطه في ذيل خط الهاشمي إجازة لجميعهم. وقد ذكرنا صورة الإجازة في ترجمة الحسين بن علي بن الأسعد العلوي الحسيني، وأما الخمسة الأخر فهم: محمد بن أحمد بن صالح السيبي. 2-علي بن محمد بن أبي الغنائم العلوي الحسيني. 3-محمد بن علي بن نقي. 4-علي بن أحمد ابن الوزير. 5-محمد بن يوسف بن محسن. وذكرنا سائر خصوصيات هذه النسخة من «التشريف» في ترجمة حسين بن علي بن الأسعد في ص 49-51 وذكرنا من سمع عنه تمام كتاب «التشريف» في ترجمة الحاج حسين بن محمد ابن شجاع في ص 52-53.(@)(@)PageV04P081(@)(@)(@@)(@@)(@@) ||| الصدر:(@)(@)(@@) -علي بن عيسى الأربلي.(@)(@)(@@)(@@)(@@) ||| الصدر: -علي بن محمد بن رمضان الطقطقي.(@)(@)(@@)(@@)(@@) ||| صدر الدين:(@)(@)(@@) -علي بن محمد بن محمد الطوسي.(@)(@)(@@)(@@)(@@) ||| صدر الدين: -محمد بن إسحاق بن علي بن يوسف.(@)(@)(@@)(@@)(@@) ||| صفي الدين:(@)(@)(@@) -محمد بن بشير.(@)(@)(@@)(@@)(@@) ||| صفي الدين: -محمد بن علي بن نقي.(@)(@)(@@)(@@)(@@) ||| صفي الدين: -محمد بن معد بن علي بن رافع.(@)(@)(@@)(@@)(@@) ||| صفي الدين: -محمد بن يحيى بن أحمد بن يحيى.(@)(@)(@@)(@@)(@@) ||| الصنعاني:(@)(@)(@@) -محمد بن أبي البركات بن ابراهيم...(@)(@)(@@)(@@)(@@) ||| الصوفي(@)(@)(@@) -العارف.(@)(@)(@@)(@@)(@@) ||| الصيدلي:(@)(@)(@@) -محمد بن علي بن عمر.(@)(@)(@@) اسكن(@)(@)PageV04P082(@)(@)(@@)(@@)(@@) || «ط»(@)(@)(@@)(@@)(@@) ||| الطائي:(@)(@)(@@) -الحسين بن خشرم.(@)(@)(@@)(@@)(@@) ||| الطائي: -محمد بن علي بن محمد بن أحمد العربي.(@)(@)(@@)(@@)(@@) ||| الطائي: -يحيى بن حميد بن ظافر.(@)(@)(@@)(@@)(@@) ||| طاوس (آل... ) :(@)(@)(@@) -أحمد بن موسى بن جعفر.(@)(@)(@@)(@@)(@@) ||| طاوس (آل... ) : -عبد الكريم بن أحمد بن موسى.(@)(@)(@@)(@@)(@@) ||| طاوس (آل... ) : -علي بن علي بن موسى...(@)(@)(@@)(@@)(@@) ||| طاوس (آل... ) : -علي بن موسى بن ج